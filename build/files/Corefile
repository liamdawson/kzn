dns://.:53 {
  bind 127.0.0.1 ::1
  reload

  template IN A test {
    answer "{{ .Name }} 60 IN A 127.0.0.1"
    fallthrough
  }

  template IN AAAA test {
    answer "{{ .Name }} 60 IN AAAA ::1"
    fallthrough
  }

  hosts {
    fallthrough
  }

  forward . tls://1.1.1.1 tls://1.0.0.1 {
    tls_servername cloudflare-dns.com
    health_check 5s
  }

  cache
  errors
}
