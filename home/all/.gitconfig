[user]
	name = "Liam Dawson"

[core]
	pager = "less -FRX"
	excludesfile = ~/.gitignore
	editor = vim

[color]
	ui = auto

[push]
	default = current

[rerere]
	enabled = true
	autoupdate = true

[commit]
	verbose = true

[merge]
	ff = only

[pull]
	ff = only

[gpg]
	program = gpg

[alias]
	hard-master = "reset --hard origin/master"
	squash-all = "!f(){ git reset $(git commit-tree HEAD^{tree} -m \"${1?Please enter a commit message}\");};f"
